{
    "extends": "../../tsconfig.json",
    "include": ["src"],
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "./src",
        "jsx": "react",
        "moduleResolution": "node",
         "module": "commonjs",
        "target": "es5",
        "strict": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noUncheckedIndexedAccess": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": true,
        "baseUrl": ".",
        "typeRoots": ["./node_modules/@types"]
    }
}